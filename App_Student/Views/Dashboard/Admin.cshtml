@model App_Student.Models.Student_view_model
<div class="container-fluid">
    <div class="row">
    <div class="col-sm-8 offset-2">
        <a asp-controller="Dashboard" asp-action="Log_out" class="btn btn-primary float-end btn-sm m-3">LogOut</a>
    </div>
    </div>
    <div class="row">
        <div class="col-sm-8 offset-2">
            <div class="card">

                <div class="card-header">
                    <h3 class="text-center text-primary">Specification</h3>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-md-4 offset-4">
                            <table>
                                <thead>
                                    <tr>
                                        <th style="text-decoration:underline">Spec Name</th>&nbsp;&nbsp;
                                        
                                        <th style ="text-decoration:underline">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.List_tbl_Specifications != null)
                                    {
                                        @foreach (var item in Model.List_tbl_Specifications)
                                        {
                                            <tr>
                                                <td>@item.Spec_Name</td>

                                                <td><a asp-action="AddCoursh" asp-controller="Dashboard" asp-route-id="@item.Spec_Id" class="btn btn-sm btn-primary">Add-Course</a></td>
                                            </tr>
                                        }
                                    }

                                </tbody>

                            </table>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-12">
                            <a asp-action="Speci_insert" asp-controller="Dashboard" class="btn btn-primary float-end">Add-specification</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/cascadejs.js"></script>
<script src="~/js/site.js"></script>