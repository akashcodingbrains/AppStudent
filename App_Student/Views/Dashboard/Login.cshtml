@model App_Student.Models.Student_view_model
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

</head>
<body>
    <div class="container-fluid">
        <div class="row" style="padding:50px;">
            <div class="col-sm-4 offset-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center text-primary">Login Form</h3>
                    </div>
                    <div class="card-body">


                        <form method="post" asp-action="Login" asp-controller="Dashboard">

                            <div class="form-group">
                                <label asp-for="tbl_Student.Email_Address"></label>
                                <input type="text" class="form-control" asp-for="tbl_Student.Email_Address" />
                            </div>

                            <div class="form-group">
                                <label asp-for="tbl_Student.Password"></label>
                                <input type="password" asp-for="tbl_Student.Password" class="form-control" />
                            </div>

                            <div class="form-group">

                                <input type="submit" class="form-control btn btn-primary btn-sm m-1 float-end" value="submit" />
                            </div>
                            <div class="form-group">
                                <a asp-action="Student_insert_data" asp-controller="Dashboard">Sign up?</a> 
                                &nbsp;&nbsp;&nbsp;
                                <a asp-action="Reset_password" asp-controller="Dashboard">Forgot Usernae/Password?</a>
                            </div>
                        </form>



                    </div>
                    @Html.Raw(TempData["msd"])
                </div>
            </div>


        </div>
    </div>
</body>
</html>
